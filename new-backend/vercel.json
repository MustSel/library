{
  "version": 2,
  "functions": {
    "api/*.js": {
      "includeFiles": [
        "node_modules/sqlite3/**/*" 
      ]
    }
  },
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/index.js" 
    },
    { 
      "handle": "filesystem" 
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
